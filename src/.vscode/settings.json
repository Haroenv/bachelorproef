// Place your settings in this file to overwrite default and user settings.
{
  "cSpell.ignoreRegExpList": [
    "\\\\\\w*(\\[.*?\\])?(\\{.*?\\})?",
    "\\$.+?\\$"
  ],
  "latex-workshop.latex.toolchain": [
    {
      "command": "pdflatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    },
    {
      "command": "makeglossaries",
      "args": [
        "%DOCFILE%"
      ]
    },
    {
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "%DOC%"
      ]
    }
  ]
}
